<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.neogrid.sped</groupId>
		<artifactId>sped-mon</artifactId>
		<version>1.72.0-SNAPSHOT</version>
	</parent>
	<artifactId>sped-mon-web</artifactId>
	<packaging>war</packaging>
	<name>sped-mon-web</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <build-tools>../build-tools</build-tools>
    </properties>
	<dependencies>
		<!-- Report Dependencies -->
		<dependency>
			<groupId>com.neogrid.fiscal.reports</groupId>
			<artifactId>report-client</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.codehaus.jackson</groupId>
					<artifactId>jackson-core</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework.amqp</groupId>
					<artifactId>spring-rabbit</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-context</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- Sped Dependencies -->
		<dependency>
			<groupId>com.neogrid.sped</groupId>
			<artifactId>sped-xml</artifactId>
		</dependency>
		<dependency>
			<groupId>com.neogrid.sped</groupId>
			<artifactId>sped-model</artifactId>
			<version>${sped.processor.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-context</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate-annotations</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.codehaus.jackson</groupId>
					<artifactId>jackson-core</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.codehaus.jackson</groupId>
					<artifactId>jackson-jaxrs</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.codehaus.jackson</groupId>
					<artifactId>jackson-xc</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.codehaus.jackson</groupId>
					<artifactId>jackson-annotations</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>jruby-complete</artifactId>
					<groupId>org.jruby</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- PrimeFaces -->
		<dependency>
			<groupId>org.primefaces</groupId>
			<artifactId>primefaces</artifactId>
			<version>6.2</version>
		</dependency>
		<dependency>
			<groupId>com.neogrid.sso</groupId>
			<artifactId>ngsso-client</artifactId>
			<version>2.0.2</version>
		</dependency>
		<dependency>
			<groupId>com.neogrid.sped</groupId>
			<artifactId>sped-enums</artifactId>
		</dependency>
		<dependency>
			<groupId>com.neogrid.sped</groupId>
			<artifactId>sped-utils</artifactId>
			<version>${sped.processor.version}</version>
			<exclusions>
				<exclusion>
					<groupId>com.neogrid.integrator</groupId>
					<artifactId>integrator-components</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.w3c.tidy</groupId>
					<artifactId>tidy</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate</artifactId>
				</exclusion>
				<exclusion>
					<groupId>poi</groupId>
					<artifactId>poi</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.quartz-scheduler</groupId>
					<artifactId>quartz</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>log4j-over-slf4j</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.neogrid.sped</groupId>
			<artifactId>sped-mon-core</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>log4j-over-slf4j</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- Arch Dependencies -->
		<dependency>
			<groupId>com.neogrid.monitor</groupId>
			<artifactId>monitor-theme</artifactId>
		</dependency>
		<dependency>
			<groupId>com.neogrid.monitor</groupId>
			<artifactId>monitor-web</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-context-support</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<!-- Primefaces FileUpload Dependencies -->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.2.1</version>
		</dependency>

		<dependency>
			<groupId>javax.enterprise</groupId>
			<artifactId>cdi-api</artifactId>
			<version>1.2</version>
		</dependency>
        <dependency>
            <groupId>com.neogrid.fiscal</groupId>
            <artifactId>commons-xml</artifactId>
        </dependency>
        <dependency>
            <groupId>com.neogrid.fiscal</groupId>
            <artifactId>commons-utils</artifactId>
        </dependency>
        <dependency>
        	<groupId>com.neogrid.sped</groupId>
        	<artifactId>fiscal-utils</artifactId>
        </dependency>

		<!-- Partners -->
		<dependency>
			<groupId>com.neogrid.sped</groupId>
			<artifactId>ntk-vaccine</artifactId>
		</dependency>

		<dependency>
			<groupId>org.ocpsoft.rewrite</groupId>
			<artifactId>rewrite-servlet</artifactId>
		</dependency>
		<dependency>
			<groupId>org.ocpsoft.rewrite</groupId>
			<artifactId>rewrite-integration-faces</artifactId>
		</dependency>
		<dependency>
			<groupId>xml-resolver</groupId>
			<artifactId>xml-resolver</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<version>${spring-core.version}</version>
			<scope>test</scope>
		</dependency>
    </dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>nl.geodienstencentrum.maven</groupId>
				<artifactId>sass-maven-plugin</artifactId>
				<version>2.23</version>
				<configuration>
					<sassOptions>
						<always_update>true</always_update>
						<style>${sass.OutputStyle}</style>
					</sassOptions>
					<buildDirectory>${project.basedir}/src/main/sass/base</buildDirectory>
					<destination>${project.basedir}/src/main/webapp/resources/css</destination>
					<sassSourceDirectory>${project.basedir}/src/main/sass/base</sassSourceDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>